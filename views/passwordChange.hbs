></script>
<script type="text/javascript">
    function Validate() { var password = document.getElementById("newPassword").value; var confirmPassword =
    document.getElementById("confirmPassword").value; if (password != confirmPassword) {
    document.getElementById('errMsg').innerHTML = "*Passsword not match" return false; } return true; }
</script>