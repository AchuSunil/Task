            </ul>
        </nav>

        <section class="profile-backgroud">
            <form action="/passwordChange" id="login" method="post">
                <div class="userDetails">
                    <h2 class="profile-heading">Change Your Password</h2>
                    {{#if passErr}}
                        <div class="err">
                            <span class="errMsg">
                                {{passErr}}
                            </span>

                        </div>
                    {{/if}}
                    <div class="curpassword commonpass">
                        <label for="currentPasswordpass">Current Password</label>
                        <input type="password" name="curPassword" id="currentPassword" />
                        <span style="color:red ;" id="curMsg"></span>
                    </div>
                    <div class="newpassword commonpass">
                        <label for="newPassword">New Password</label>
                        <input type="password" name="newPassword" id="newPassword" />
                    </div>
                    <div style="text-align: center;">
                        <span style="color: red;" id="errMsg"></span>
                    </div>
                    <div class="confpassword commonpass">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" id="confirmPassword" />
                    </div>

                    <div class="password-btn">
                        <button class="btn bg-success text-light btn-sm" onclick="return Validate()">Save</button>
                        <a href="/myprofile" class="btn bg-danger text-light btn-sm ms-2">Cancel</a>
                    </div>

                </div>
            </form>
        </section>

    </div>
</div>
<script
